# Include documentation and license files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include SECURITY.md

# Include all package data
recursive-include src/prompt_versioning *.py
recursive-include src/prompt_versioning *.typed

# Include tests (optional, but useful for verification)
recursive-include tests *.py

# Exclude cache and build files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
global-exclude .git*
